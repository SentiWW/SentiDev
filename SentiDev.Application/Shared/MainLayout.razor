@using SentiDev.Application.Statics
@inherits LayoutComponentBase

<MudThemeProvider Theme="CustomTheme.Theme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="1"
               Dense="true"
               Color="Color.Primary">
        <MudIconButton Icon="@Icons.Material.Filled.Menu"
                       Color="Color.Inherit"
                       Edge="Edge.Start"
                       OnClick="DrawerToggleAsync"/>
        <MudButton Variant="Variant.Text"
                   Href="@Routes.HomeRoute"
                   DisableElevation="true"
                   DisableRipple="true"
                   Style="background: none;
                          color: #ffffff">
            SENTI.DEV
        </MudButton>
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>