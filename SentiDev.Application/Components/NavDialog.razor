@using SentiDev.Application.Statics
<style>
    .mud-list-item-custom:hover {
        color: @Colors.Red.Darken2;
    }
</style>

<MudDialog Style="opacity: .75;">
    <DialogContent>
        <MudContainer Style="opacity: 1;
                             display: flex;
                             justify-content: center;
                             align-items: center;
                             width: 100vw;
                             height: 100vh;
                             padding-bottom: 15vh;">
            <MudList>
                @foreach (var item in NavDialogItems.Items)
                {
                    <a href="@item.Href">
                        <MudListItem Class="mud-list-item-custom">
                            <MudText Align="Align.Center"
                                     Style="font-size: 2rem;
                                            font-weight: 900">
                                @item.Text
                            </MudText>
                        </MudListItem>
                    </a>
                }
            </MudList>
        </MudContainer>
    </DialogContent>
</MudDialog>